{
  "name": "somnia-gas-profiler",
  "version": "1.0.0",
  "description": "Professional gas profiling and analysis tool for Somnia blockchain smart contracts with advanced developer insights and automated ABI fetching",
  "main": "cli/index.js",
  "bin": {
    "somnia-gas-profiler": "./cli/index.js"
  },
  "scripts": {
    "start": "node cli/index.js",
    "analyze": "node cli/index.js analyze",
    "profile": "node cli/index.js profile",
    "compile-and-profile": "node cli/index.js compile-and-profile",
    "quick-analyze": "node cli/index.js quick-analyze",
    "report": "node cli/index.js report",
    "dashboard": "cd dashboard && npm run dev",
    "dashboard:build": "cd dashboard && npm run build",
    "webapp:dev": "cd api/frontend && npm run dev",
    "webapp:build": "cd api/frontend && npm run build",
    "webapp:preview": "cd api/frontend && npm run preview",
    "api:start": "cd api && npm start",
    "api:dev": "cd api && npm run dev",
    "build": "npm run webapp:build",
    "build:all": "npm install && cd api && npm install && cd frontend && npm install && npm run build",
    "dev": "concurrently \"npm run api:dev\" \"npm run webapp:dev\"",
    "test": "set NODE_ENV=test && mocha test/**/*.spec.js",
    "test:watch": "mocha test/**/*.spec.js --watch",
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy-contracts.js",
    "deploy:somnia": "hardhat run scripts/deploy-contracts.js --network somnia"
  },
  "keywords": [
    "somnia",
    "blockchain",
    "gas-profiling",
    "gas-optimization",
    "ethereum",
    "evm",
    "smart-contracts",
    "cli-tool",
    "bytecode-analysis",
    "developer-tools",
    "solidity",
    "hardhat",
    "foundry",
    "web3"
  ],
  "author": "Somnia Gas Profiler Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "chalk": "^4.1.2",
    "csv-stringify": "^6.4.4",
    "dotenv": "^16.3.1",
    "ethers": "^6.0.0",
    "redis": "^5.8.2",
    "table": "^6.8.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "chai": "^4.3.10",
    "concurrently": "^8.2.2",
    "mocha": "^10.2.0",
    "sinon": "^17.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/somnia/gas-profiler.git"
  },
  "bugs": {
    "url": "https://github.com/somnia/gas-profiler/issues"
  },
  "homepage": "https://github.com/somnia/gas-profiler#readme"
}
